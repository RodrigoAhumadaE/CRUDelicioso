@{
    ViewData["Title"] = "Editar Plato";
    int[] valorSabor = new int[]{1,2,3,4,5};
}
@model Plato
<div class="text-center">
   <h1 class="display-4">Editar @Model.Nombre</h1> 
</div>
@await Html.PartialAsync("_Navbar")
<form class="formulario" asp-controller="Home" asp-action="ActualizarPlato" asp-route-PlatoId="@Model.PlatoId">
    <div class="izq">
        <div class="item">
            <label asp-for="Chef">Nombre del Chef</label>
            <input type="text" asp-for="Chef" value="@Model.Chef">
            <span asp-validation-for="Chef"></span>
        </div>
        <div class="item">
            <label asp-for="Nombre">Nombre del Plato</label>
            <input type="text" asp-for="Nombre" value="@Model.Nombre">
            <span asp-validation-for="Nombre"></span>
        </div>
        <div class="item">
            <label asp-for="Calorias"># de Calorias</label>
            <input type="number" asp-for="Calorias"  value="@Model.Calorias">
            <span asp-validation-for="Calorias"></span>
        </div>
    </div>
    <div class="cen">
        <div class="item">
            <label asp-for="Sabor">Sabor</label>
            <select asp-for="Sabor"  value="@Model.Sabor">
                @foreach(int valor in valorSabor){
                    <option value="@valor">@valor</option>
                }
            </select>
            <span asp-validation-for="Sabor"></span>
        </div>
    </div>
    <div class="der">
        <div class="item">
            <label asp-for="Descripcion">Descripci√≥n</label>
            <textarea asp-for="Descripcion" rows="5">@Model.Descripcion</textarea>
            <span asp-validation-for="Descripcion"></span>
        </div>
        <div class="boton">
            <button class="btn btn-success">Actualizar Plato</button>
        </div>
    </div>
</form>
